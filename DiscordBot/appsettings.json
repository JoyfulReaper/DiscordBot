{
  "ConnectionStrings": {
    "MSSQL": "Server=;Database=DiscordBot;Trusted_Connection=True;",
    "SQLite": "Data Source=DiscordBot.db;Version=3;"
  },

  "DatabaseType": "SQLite",

  "EmbedColor": "33,176,251",
  "RandomEmbedColor": "true",
  "DefaultPrefix": "!",
  "OwnerUsername": "JoyfulReaper",
  "OwnerDiscriminator": "7485",
  "WelcomeMessage": "just spawned in!",
  "ShowWelcomeMessage": "true",
  "PrefixMaxLength": "8",
  "ShowBotJoinMessages": "false",

  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "DiscordBot": "Debug"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": ".\\Logs\\DiscordBot.log",
          "outputTemplate": "[{Timestamp:MM/dd HH:mm:ss.fff} {Level:u3}]: {Message}{NewLine:1}{Exception:1}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": ".\\Logs\\DiscordBotLog.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:1299"
        }
      }
    ]
  }
}
